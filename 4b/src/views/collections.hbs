{{>head }}
{{>navbar }}
<div class="w-full max-w-4xl mx-auto min-h-screen py-32">
    <div class="w-full h-fit">
        <h1 class="text-2xl font-bold mb-10">Collections</h1>
        <div class="w-full h-fit grid grid-cols-3 gap-20">

            
            {{#each data }}
            <div class="col-span-1 aspect-square rounded-2xl bg-slate-800 p-5 flex flex-col justify-between">
                <div class="w-10 aspect-square rounded-full bg-slate-700 flex items-center justify-center">
                    <i class="fa-regular fa-file"></i>
                </div>
                <div class="w-full h-fit flex justify-between items-center">
                    <div class="flex-1 h-fit">
                        <h3 class="font-semibold text-xl">{{ name }}</h3>
                        <p class="text-neutral-500">1/3 done</p>
                    </div>
                    <div class="w-fit h-fit">
                        <i class="fa-solid fa-clock" size="2x" style="color: #a855f7"></i>
                    </div>
                </div>
            </div>
            {{/each }}

        </div>
    </div>
</div>
{{>foot }}